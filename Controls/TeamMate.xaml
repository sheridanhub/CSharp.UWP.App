<UserControl
    x:Class="CSharp.UWP.App.Controls.TeamMate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CSharp.UWP.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="teammate"
    d:DesignHeight="100"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <Border
        Margin="0,0,0,0"
        Padding="3"
        CornerRadius="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="156.877" />
                <ColumnDefinition Width="8.123"/>
            </Grid.ColumnDefinitions>

            <!--  Border Avatar  -->
            <Border
                Width="50"
                Height="50"
                Margin="10,22,0,22"
                Padding="3"
                Background="White"
                CornerRadius="50">
                <Ellipse>
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding Path=ImageSource, ElementName=teammate}" />
                    </Ellipse.Fill>
                </Ellipse>
            </Border>

            <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Margin="0,25,0,0">
                <TextBlock
                    Margin="20,0,0,3"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="{Binding Path=Title, ElementName=teammate}"
                    TextWrapping="WrapWholeWords" />
                <TextBlock
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="11"
                    FontWeight="Normal"
                    Text="{Binding Path=Department, ElementName=teammate}"
                    TextWrapping="WrapWholeWords" />
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
