<Page
    x:Class="CSharp.UWP.App.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CSharp.UWP.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Width="auto" Margin="18">
        <ScrollViewer Margin="0,0,0,0" Padding="18">

            <!--  Promo Product  -->
            <Grid
                Width="auto"
                Height="561"
                Margin="0,0,0,0"
                Background="#E9E3DC"
                BorderBrush="#E9E3DC"
                BorderThickness="12"
                CornerRadius="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="7*" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Margin="0,0,30,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Assets/home/product-prome-phones.png"
                    Stretch="UniformToFill" />
                <StackPanel Grid.Column="1">
                    <TextBlock
                        Margin="0,145,0,0"
                        FontSize="18"
                        FontWeight="Normal"
                        Foreground="#3C4043"
                        Text="Pixel 7 phones" />

                    <TextBlock
                        Width="250"
                        Margin="0,7,0,0"
                        HorizontalAlignment="Left"
                        FontSize="48"
                        FontWeight="Bold"
                        Foreground="#3C4043"
                        Text="Full speed ahead."
                        TextWrapping="WrapWholeWords" />
                    <TextBlock
                        Width="auto"
                        Margin="0,7,15,0"
                        HorizontalAlignment="Left"
                        FontSize="18"
                        FontWeight="Normal"
                        Foreground="#3C4043"
                        Text="Pixel 7 Pro and Pixel 7 are powered by Google Tensor G2, making them even faster, more helpful, and extra secure.‡"
                        TextWrapping="WrapWholeWords" />
                    <Button
                        Width="120"
                        Height="40"
                        Margin="0,40,0,0"
                        HorizontalAlignment="Left"
                        Content="Learn more"
                        FontFamily="Montserrat"
                        FontWeight="Bold"
                        Style="{StaticResource promo-button}" />

                </StackPanel>
            </Grid>

        </ScrollViewer>
    </Grid>
</Page>
