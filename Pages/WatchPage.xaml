<Page
    x:Class="CSharp.UWP.App.Pages.WatchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:CSharp.UWP.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:CSharp.UWP.App.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer Margin="0,30,0,0" Padding="10">
            <StackPanel
                Margin="18"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">

                <TextBlock
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center"
                    Style="{StaticResource page_nav_header}"
                    Text="Smartwatches" />
                <TextBlock
                    Width="auto"
                    Margin="0,7,15,30"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Normal"
                    Foreground="White"
                    Text="Keep up with your day, your health, and your fitness"
                    TextWrapping="WrapWholeWords" />
                <!--  Promo Product  -->
                <Grid
                    Width="auto"
                    Height="auto"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="#F4EFE4"
                    BorderThickness="2"
                    CornerRadius="2">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Assets/watchs/promo-watch.png" Stretch="UniformToFill" />
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--<Image
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Source="/Assets/watchs/promo-watch.jpg"
                        Stretch="Uniform" />-->
                    <StackPanel
                        Grid.Column="0"
                        Margin="50,0,18,20"
                        HorizontalAlignment="Left">
                        <Image
                            Width="45"
                            Height="45"
                            Margin="-10,190,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Source="/Assets/logo/google_logo.png"
                            Stretch="UniformToFill" />
                        <TextBlock
                            Width="auto"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"
                            FontSize="48"
                            FontWeight="Bold"
                            Foreground="#3C4043"
                            Text="Google Pixel Watch"
                            TextWrapping="WrapWholeWords" />
                        <TextBlock
                            Width="auto"
                            Margin="0,16,15,0"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            FontWeight="Normal"
                            Foreground="#3C4043"
                            Text="Help by Google. Health by Fitbit.3"
                            TextWrapping="WrapWholeWords" />
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,15,5,0"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#3C4043"
                                Text="From CA$399.99 " />
                            <RichTextBlock
                                Margin="5,15,5,0"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Normal"
                                Foreground="#3C4043"
                                TextDecorations="Strikethrough"
                                TextWrapping="NoWrap">
                                <Paragraph>CA$449.99</Paragraph></RichTextBlock>
                            <TextBlock
                                Margin="5,15,5,0"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Normal"
                                Foreground="ForestGreen"
                                Text="Save CA$50" />
                        </StackPanel>
                        <Button
                            Width="120"
                            Height="40"
                            Margin="0,40,0,0"
                            HorizontalAlignment="Center"
                            Content="Learn more"
                            FontFamily="Montserrat"
                            FontWeight="Bold"
                            Style="{StaticResource promo-button}" />

                    </StackPanel>

                </Grid>

                <!--  User Control  -->
                <StackPanel Margin="15,15,15,0" Orientation="Horizontal">
                    <uc:TeamMate Title="Anne Bolyn" Email="anne.bolyn@gmail.com" ImageSource="/Assets/pics/p1.png" Department="Accounts" />
                    <uc:TeamMate Title="Peter Bond" ImageSource="/Assets/pics/p2.png" Department="Media"/>
                    <uc:TeamMate Title="Elon Musk" ImageSource="/Assets/pics/p4.png" Department="Programmer"/>
                    <uc:TeamMate Title="Taimur Student" ImageSource="/Assets/pics/p2.png" Department="Sheridan FAST"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
